  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@codecov/vite-plugin": "^1.9.1",
    "@eslint/js": "^9.33.0",
    "@tanstack/eslint-plugin-query": "^5.90.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
