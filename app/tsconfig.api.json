{
  // Extend your existing base tsconfig for common settings
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override the settings that conflict with Vercel's runtime:
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    // IMPORTANT: Enable output for the API files
    "noEmit": false,
    "outDir": "./.vercel/output/api", // Vercel looks for output here
    "rootDir": ".",
    // Disable path aliases for the API to enforce relative imports
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["api/**/*.ts", "src/**/*.ts"], // Only compile files within the 'api' directory
  "exclude": ["src", "node_modules", "dist", "coverage", "html"]
}
